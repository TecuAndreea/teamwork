
@{

    Layout = "_ClientLayout";
    @model ProductsListViewModel
 }

<div class="card-columns">
    @foreach (var product in Model.Products)
    { 
        <div class="card">
            <img class="card-img" src="@Url.Content(product.PhotoUrl)"/>
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
            </div>
        </div>
    }
</div>